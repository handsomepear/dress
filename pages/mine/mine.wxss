
/**index.wxss**/
.f72{font-size: 72rpx;}
.bg-a0a{background: #a0a0a0}

.toper{ height: 192rpx; padding: 30rpx; box-sizing: border-box;font-size: 32rpx; color: #fff;line-height: 132rpx; }
.toper .user-info{display: inline-block; }
.toper .user-info .avatar{width: 116rpx; height: 116rpx; border-radius: 50%; vertical-align: middle; border:2rpx solid #fff; margin-right: 30rpx;}

.nav{ height: 128rpx; display: flex; background: #fff; margin-bottom: 15rpx }
.nav .item{flex: 1; text-align: center;  vertical-align: middle; margin: 15rpx 0 ; padding-top: 10rpx;}
.nav .all{overflow: hidden; position: relative; }
.nav .all:before{content: ''; transform: rotate(45deg); width: 30rpx; height: 30rpx; z-index: 2;background: #fff; border:2rpx solid #ddd ; position: absolute;left:-30rpx; top:30rpx; }
.nav .all:after{content: '';  width: 2rpx; height: 100%; z-index: 1; border-left:2rpx solid #ddd ; position: absolute;left:0; top:0; }

.tab-title{position: relative;height: 100rpx; background: #fff;  line-height: 100rpx; margin-bottom:10rpx;}
.tab-title .tab-one{ display: inline-block; width: 50%; box-sizing: border-box; background: #f9f9f9; text-align: center; }
.tab-title .tab-one.act{ background: #fff; border-bottom: 4rpx solid #FF6480	}
.tab-title .tab-one.act i{ color: #FF6480 }
