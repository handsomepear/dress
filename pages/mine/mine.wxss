/* 我的收藏 */
.like-list{}
.like-list .item{ width: 49.6%;  display: inline-block;margin-bottom: 6rpx;margin-right:.8%; background: #fff}
.like-list .item:nth-child(2n){margin-right:0;}
.like-list .item .img{width:100%; height: 372rpx; vertical-align: top; }
.like-list .item .txt{padding-left: 30rpx; line-height: 40rpx; font-size: 28rpx; }
.like-list .item .btn-wrap{text-align: center;margin-bottom: 20rpx;}
.like-list .item .btn{width:144rpx; height: 52rpx; vertical-align: top; line-height: 52rpx; border-radius: 26rpx; margin:0 10rpx; color:#999; border-color: #d7d7d7}

/* 订单列表 */
.coder-list{}
.coder-list .item{background: #fff;padding:20rpx;}
.coder-list .item .title{ height: 70rpx; color:#101010; line-height: 60rpx; border-bottom: 1px #f6f6f6 solid;margin-bottom: 25rpx;}
.coder-list .item .goods{ border-bottom: 1px #f6f6f6 solid; }
.coder-list .item .info{ display: flex }
.coder-list .item .info .pic{width:190rpx; height:190rpx; }
.coder-list .item .info .pic image{width:100%; height: 100%;}
.coder-list .item .info .detail{flex:1; padding-left: 20rpx;}


/* 现金券 */
.coupon-list{margin:15rpx}
.coupon-list .item{position:relative; height:200rpx; margin-bottom: 10rpx; }
.coupon-list .item:before,
.coupon-list .item:after{ content:''; position: absolute; height: 100%; width: 30rpx;  top: 0; z-index: 2;  }
.coupon-list .item:before{left: 0; background: url(https://image.guang.j.cn/static/imgs/dress/my/coupon-bg-01.png?t=9584) no-repeat; background-size:contain;}
.coupon-list .item:after {right: 0; background: url(https://image.guang.j.cn/static/imgs/dress/my/coupon-bg-02.png?t=9584) no-repeat right; background-size:contain;}
.coupon-list .item .cash-wrap{ display: inline-block; vertical-align: top; width: 200rpx; height: 200rpx; padding-top:40rpx; box-sizing: border-box; color:#fff;}
.coupon-list .item .cash-wrap .money{ position: relative; font-size: 70rpx; }
.coupon-list .item .cash-wrap .money:before{content: '￥'; position: absolute; left:-30rpx; bottom: 10rpx; font-size: 36rpx
  ; }
.coupon-list .item .detail{ position: relative; display: inline-block;vertical-align: top; width: 520rpx;height:200rpx; box-sizing: border-box; padding:15rpx; background: #fff;overflow: hidden; }
.coupon-list .item .detail .time{position: absolute; left: 15rpx; bottom: 15rpx;}
.coupon-list .item .detail .opation{position: absolute; right: 30rpx; bottom: 25rpx;}
.coupon-list .item .detail .opation .btn{ width: 152rpx; height: 56rpx; line-height: 56rpx }
.coupon-list .item .detail .used{ position: absolute; width:120rpx; height: 120rpx; right: 30rpx; bottom:-40rpx; background: url(https://image.guang.j.cn/static/imgs/dress/my/used.png?t=9584) no-repeat ; background-size: 100%;}

