.settle-result {
  color: #3c3c3c;
}
.result-desc {
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}
.result-desc i {
  font-size: 56rpx;

  margin-right: 20rpx;
}

.settle-price {
  display: flex;
  justify-content: center;
  font-size: 32rpx;
  line-height: 44rpx;
  margin-top: 12rpx;
}
.result-desc .desc {
  font-size: 56rpx;
  line-height: 66rpx;
}

.button-group {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}
.button-group view {
  width: 240rpx;
  height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  font-size: 28rpx;
}

.button-group view:first-child {
  margin-right: 60rpx;
}
