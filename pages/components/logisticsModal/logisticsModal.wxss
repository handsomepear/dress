.logistics-wrap {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 0;
  top: 100rpx;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 100;
}

.logistics-con {
  width: 692rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.top {
  position: relative;
  width: 692rpx;
  height: 266rpx;
  background-color: #ff6480;
  color: #fff;
  padding: 30rpx 24rpx 32rpx;
  box-sizing: border-box;
}

.head {
  position: relative;
}
.head .title {
  line-height: 56rpx;
  font-size: 40rpx;

  margin-bottom: 26rpx;
  text-align: center;
}

.close-btn {
  position: absolute;
  right: 0;
  top: 0;
  text-align: center;
  line-height: 22rpx;
  width: 25rpx;
  height: 25rpx;
  padding: 30rpx;
  font-size: 65rpx;
}
.close-btn view {
  transform-origin: center center;
  transform: rotate(135deg);
}

.good {
  display: flex;
  justify-content: flex-start;
  height: 120rpx;
}
.good .good-title {
  display: flex;
  justify-content: space-between;
}
.good-title .title {
  width: 75%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.good-img {
  width: 120rpx;
  height: 120rpx;
}
.good-img image {
  display: block;
  width: 100%;
  height: 100%;
}
.good .desc {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-left: 10rpx;
}

.desc .code {
  display: flex;
  justify-content: space-between;
}

.copy-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 108rpx;
  height: 32rpx;
  border: 2rpx solid #fff;
  box-sizing: border-box;
  margin-left: 10rpx;
  font-size: 22rpx;
}

.timeline {
  height: 750rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #999;
}

.timeline .item {
  position: relative;
  display: flex;
  justify-content: flex-start ;
  align-items: center;
  line-height: 40rpx;
}
.timeline .item:not(:last-child) .info::after {
  content: '';
  position: absolute;
  pointer-events: none;
  background-color: #ddd;
  width: 2rpx;
  top: 50%;
  left: -44rpx;
  bottom: -70rpx;
  z-index: 1;
}

.date {
  font-size: 26rpx;
  color: #101010;
}

.item .clock {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* icon 图标 */
.icon-con {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 48rpx;
  height: 48rpx;
  margin: 0 20rpx;
  background-color: #fff;
}
.icon {
  position: relative;
  display: block;
  width: 12rpx;
  height: 12rpx;
  background-color: #D6D6D6;
  border-radius: 50%;
  z-index: 2;
}
.info {
  position: relative;
  flex: 1;
  padding: 10rpx 0;
}
.info-state {
  font-size: 28rpx;
}


.border {
  border: 2rpx solid #979797;
  border-radius: 50%;
  z-index: 3;
  box-sizing: border-box;
}

.icon-con .iconfont {
  color: #979797
}
.no-logistics {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
