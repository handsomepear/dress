/**index.wxss**/
page {
  width: 100%;
  height: 100%;
}

.index-page {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.home {
  width: 100%;
  height: 100%;
}

.video-item {
  width: 100%;
  height: 100%;
}

.video {
  width: 100%;
  height: auto;
  flex: 1;
}

.good-detail {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 232rpx;
  padding: 24rpx 32rpx 24rpx 33rpx;
  box-sizing: border-box;
  color: #fff;
  background-color: #000;
}
.detail-title {
  display: flex;
  height: 80rpx;
  word-break: break-all;
  box-orient: vertical;
  line-clamp: 2;
  white-space: normal;
  width: 506rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  margin-bottom: 16rpx;
}

.detail-bottom {
  display: flex;
  align-items: center;
}

.detail-price {
  min-width: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.now-price {
  font-size: 44rpx;
  line-height: 60rpx;
  color: #ff6480;
  text-align: center;
}

.prev-price {
  position: relative;
  font-size: 22rpx;
  line-height: 32rpx;
  color: #bdbdbd;
  text-align: center;
  text-decoration: line-through;
}

.detail-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 163rpx;
  height: 74rpx;
  border-radius: 200rpx;
  font-size: 26rpx;
  line-height: 74rpx;
  text-align: center;
  margin-left: 26rpx;
  background-color: #ff6480;
  color: #fff;
}

.next {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  line-height: 32rpx;
}
.next .next-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 108rpx;
  height: 108rpx;
  background-color: #333030;
  /* opacity: 0.35; */
  border-radius: 50%;
  margin-bottom: 6rpx;
}
.next .next-btn i {
  font-size: 50rpx;
  font-weight: bold;
  color: #fff;
  z-index: 100;
}

.good-side {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  top: 350rpx;
  right: 34rpx;
  color: #fff;
}

.store,
.collect,
.add-cart,
.share {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.avatar {
  width: 90rpx;
  height: 90rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
  margin-bottom: 12rpx;
  overflow: hidden;
}

.avatar cover-image {
  width: 100%;
  height: 100%;
}
.collect {
  margin-top: 46rpx;
}
.collect cover-image {
  width: 68rpx;
  height: 64rpx;
}
.add-cart {
  margin-top: 38rpx;
}

.add-cart cover-image {
  width: 70rpx;
  height: 65rpx;
}

.share {
  margin-top: 70rpx;
}

.share {
  position: relative;
  width: 68rpx;
  height: 66rpx;
}
.share cover-image {
  position: absolute;
  width: 68rpx;
  height: 66rpx;
  top: 0;
  left: 0;
}
.share-btn {
  display: block;
  position: absolute;
  width: 68rpx;
  height: 66rpx;
  padding: 33rpx 39rpx;
  top: 0;
  left: 0;
}

.share-btn[plain] {
  border: none;
}

