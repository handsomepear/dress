

.good-item {
  margin-bottom: 20rpx;
}
.video {
  width: 100%;
  height: 750rpx;
}

.good-detail {
  background-color: #fff;
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}

.good-detail .desc {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.desc .good-title {
  width: 67.5%;
  line-height: 42rpx; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.low-price {
  font-size: 44rpx;
  line-height: 60rpx;
}

.high-price {
  font-size: 22rpx;
  line-height: 32rpx;
  color: #bdbdbd;
  text-decoration: line-through;
  margin-left:10rpx;
}

.good-else {
  display: flex;
  justify-content: space-between;
}
.store {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.store-avatar {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  overflow: hidden;
}
.store-name {
  color: #4a4a4a;
}
.store-avatar image {
  display: block;
  width: 100%;
  height: 100%;
}

.action {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.share {
  width: 40rpx;
  height: 38rpx;
  margin-right: 60rpx;
  box-shadow:0 0 10rpx #4a4a4a;
}
.collect {
  width: 40rpx;
  height: 36rpx;
  margin-right: 60rpx;
  box-shadow:0 0 10rpx #4a4a4a;
}
.share image, .collect image {
  display: block;
  width: 100%;
  height: 100%;
}



.view-detail {
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 163rpx;
  height: 74rpx;
  border-radius: 200rpx;
  font-size: 26rpx;
  line-height: 74rpx;
  text-align: center;
  margin-left: 26rpx;
  background-color: #ff6480;
  color: #fff;
}