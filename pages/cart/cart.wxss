/**index.wxss**/

.cart-empty {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-text {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #999;
  margin-top: 32rpx;
}

.cart-list {
  padding-bottom: 110rpx;
}

.go-shopping {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 36rpx;
}
.go-shopping .btn {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  border-radius: 44rpx;
}

.cart-total {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  z-index: 10;
}

.total-right {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.check-all,
.total-amount {
  font-size: 28rpx;
  /* color: #333; */
  height: 110rpx;
  line-height: 110rpx;
  margin-right: 18rpx;
}
.check-all {
  display: flex;
}
.total-amount text {
  font-size: 32rpx;
  color: red;
}

.settle {
  width: 210rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #ff6480;
  color: #fff;
  font-size: 30rpx;
  border-radius: none;
}
.settle.disabled {
  background-color: #ccc;
}
.store-item {
  margin-top: 20rpx;
  background-color: #fff;
}

.store-name {
  display: flex;
  height: 88rpx;
  justify-content: flex-start;
  align-items: center;
}

.check-box {
  width: 84rpx;
  height: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.name {
  flex: 1;
  height: 100%;
  line-height: 88rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden; 
  
  color: #101010;
  border-bottom: 2rpx solid #ddd;
  box-sizing: border-box;
}
.name text {
  font-size: 28rpx;
  
}

.name i {
  margin-right: 10rpx;
}

.f134 {
  font-size: 134rpx;
}

.item {
  position: relative;
}
.item:first-child {
  padding-top: 20rpx;
}
.item:last-child {
  padding-bottom: 20rpx;
}

/* 缺货 */
.stockout {
  background-color: #f8f8f8;
  color: #999;
}

.stockout .title {
  color: #999;
}
.stockout .price {
  color: #999;
}
.stockout .image image {
  filter:Gray; -webkit-filter: grayscale(60%);
}
.good-left .image {
  width: 100%;
  height: 100%;
}

.image image {
  display: block;
  width: 100%;
  height: 100%;
}

.item-wrap {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  z-index: 1;
}

/* .action .delete {
  right: 0;
  background-color: #ff6480;
}
.action .collect {
  right: 116rpx;
  background-color: #ffa7b7;
} */
.good-item {
  flex: 1;
  padding-top: 10rpx;
  padding-right: 24rpx;
  padding-bottom: 16rpx;
  box-sizing: border-box;
}

.good {
  display: flex;
  justify-content: flex-start;
}

.good-left {
  width: 220rpx;
  height: 220rpx;
  margin-right: 24rpx;
}

.good-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-size: 28rpx;
  color: #3c3c3c;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.good-sku-wrapper {
  position: relative;
  height: 34rpx;
}
.good-sku {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  line-height: 34rpx;
  font-size: 22rpx;
  /* text-align: center; */
  color: #999;
  border-radius: 4rpx;
  background-color: rgba(204, 204, 204, 0.1);
  /* margin-top: 12rpx; */
  padding: 0 12rpx;
  box-sizing: border-box;
}

.triangle .content {
  width: 8rpx;
  height: 8rpx;
  border: #999 solid;
  border-width: 1rpx 1rpx 0 0;
  transform: rotate(135deg);
  margin-top: 11rpx;
  margin-left: 20rpx;
}

.price {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #ff6480;
}
.good-operation {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count {
  display: flex;
  justify-content: flex-start;
  width: 156rpx;
  height: 48rpx;
  color: #999;
}
.stockout-tips {
  width: 94rpx;
  height: 36rpx;
  background-color: #e2e2e2;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 36rpx;
}
.count view {
  width: 48rpx;
  height: 48rpx;
  border: 1rpx solid #ddd;
  box-sizing: border-box;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.count input {
  width: 60rpx;
  height: 48rpx;
  min-height: 48rpx;
  line-height: 48rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
  text-align: center;
}

.good-operation .operation {
  display: flex;
  justify-content: flex-start;
}
.good-operation .operation .btn {
  width: 48rpx;
  height: 48rpx;
  background: rgba(204, 204, 204, 0.15);
  border-radius: 6rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 48rpx;
  color: rgb(159, 159, 159);
}
.good-operation .operation .delete, .good-operation .operation .collect {
  /* margin-right: 40rpx; */
  padding: 10rpx 20rpx;
}

.loading-con {
  position: fixed;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.loading {
  width: 200px;
  height: 50px;
  background: url('http://image.guang.j.cn/static/imgs/dress/loading.png') no-repeat;
  animation: loading steps(44) 2s infinite;
}

@keyframes loading {
  from {
    background-position: 0 0; 
  }
  to {
    background-position: -8800px 0;
  }
}