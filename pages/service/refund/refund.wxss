.refund {
  padding-bottom: 100rpx;
}
.order-info {
  background-color: #fff;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
}
 .info {
  display: flex;
  /* margin-bottom: 20rpx; */
}
 .info .pic {
  width: 128rpx;
  height: 128rpx;
}
 .info .pic image {
  width: 100%;
}
.info .detail {
  flex: 1;
  margin-left: 20rpx;
}
/* 退款信息 */
.refund-info {
  width: 100%;
  padding-left: 24rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.reason,
.money {
  height: 100rpx;
  font-size: 28rpx;
  color: #3c3c3c;
  line-height: 100rpx;
}
.reason {
  position: relative;
  border-bottom: 2rpx solid #ddd;
}
.reason-info {
  padding-right: 60rpx;
  display: flex;
  justify-content: space-between;
}
.reason-info .picker {
  height: 100rpx;
  color: #9b9b9b;
}
.money text {
  font-size: 32rpx;
}

.reason .triangle .content {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 16rpx;
  height: 16rpx;
  border: #666 solid;
  border-width: 2rpx 2rpx 0 0;
  transform: rotate(45deg);
  margin-top: 11rpx;
  margin-left: 10rpx; 
}

/* 问题描述 */
.issue-desc, .post-img {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx 24rpx 30rpx;
  box-sizing: border-box;
}
.post-img {
  padding-bottom: 0;
}
.title {
  font-size: 28rpx; 
  color: #3c3c3c;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.title text {
  color: #9b9b9b;
}

.issue-desc textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 上传凭证 */

.post-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}
.post-btn, .proof-img {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  box-sizing: border-box;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
}
.proof-img image {
  display: block;
  width: 100%;
  height: 100%;
}

.post-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2rpx dashed #9b9b9b;
  color: #9b9b9b;
 
}
.post-btn text {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.post-btn i {
  font-size: 40rpx;
}
.submit-btn {
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
}
.submit-btn .btn {
  width: 100%;
}

.quantity {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 100rpx;
  border-bottom:2rpx solid #ddd;
}


.count {
  display: flex;
  justify-content: flex-start;
  width: 156rpx;
  height: 48rpx;
  color: #999;
}
.stockout-tips {
  width: 94rpx;
  height: 36rpx;
  background-color: #e2e2e2;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 36rpx;
}
.count view {
  width: 48rpx;
  height: 48rpx;
  border: 1rpx solid #ddd;
  box-sizing: border-box;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.count input {
  width: 60rpx;
  height: 48rpx;
  min-height: 48rpx;
  line-height: 48rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
  text-align: center;
}