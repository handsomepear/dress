@import '../service.wxss';

.express-detail {
  padding: 0 24rpx;
  background-color: #fff;
}

.choose {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
}
.choose picker {
  flex: 1;
}
.choose text {
  font-size: 28rpx;
  line-height: 100rpx;
}
 .picker {
  font-size: 28rpx;
  height: 100rpx;
  color: #9b9b9b;
  margin-right: 10rpx
}
.express-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.choose .triangle .content {
  width: 18rpx;
  height: 18rpx;
  border: #666 solid;
  border-width: 2rpx 2rpx 0 0;
  transform: rotate(45deg);
}

/* 扫描单号 */
.tracking-num {
  padding: 30rpx 0 28rpx;
  background-color: #fff;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
  box-sizing: border-box;
  border-bottom: 1
}

.title {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.tel-num {
  padding: 30rpx 0 28rpx;
}

.fill-ecode input, .tel-num input {
  background-color: #f8f8f8;
  width: 100%;
  height: 88rpx;
  padding-left: 20rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.fill-ecode {
  position: relative;
  width: 100%;
  height: 88rpx;
}

.scan {
  position: absolute;
  right: 20rpx;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 96rpx;
  height: 100%;
  z-index: 10;
}
.scan i {
  color: #000;
}

.submit-ecode {
  width: 180rpx;
  height: 86rpx;
  background-color: #ff6480;
  color: #fff;
  text-align: center;
  line-height: 86rpx;
}

.submit-express-number {
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
}
.submit-express-number .btn {
  width: 100%;
  font-size: 28rpx;
}
