@import '../mine/mine.wxss';

.txt {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.loading-con {
  position: fixed;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.loading {
  width: 200px;
  height: 50px;
  background: url('http://image.guang.j.cn/static/imgs/dress/loading.png') no-repeat;
  animation: loading steps(44) 2s infinite;
}

@keyframes loading {
  from {
    background-position: 0 0; 
  }
  to {
    background-position: -8800px 0;
  }
}