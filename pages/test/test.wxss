.input-wrap{ position: fixed; bottom: 0; width: 100%; height: 600rpx ; padding:20rpx;}
.ipt{ width: 50%; background: #ddd; box-sizing: border-box; border-radius: 40rpx; padding:30rpx;}

.loading {
  width: 200px;
  height: 50px;
  background: url('http://image.guang.j.cn/static/imgs/dress/loading.png') no-repeat;
  animation: loading steps(44) 2s infinite;
}

.loading-con {
  width: 100%;
  display: flex;
  justify-content: center;
}
@keyframes loading {
  from {
    background-position: 0 0; 
  }
  to {
    background-position: -8800px 0;
  }
}


.btn{
  width: 20rpx;
  height: 20rpx;
  margin: 0;
  padding: 0;
  border-radius: 0;
  position: fixed;
  background: rgba(0,155,0,0.5);
  top: 0;
}
button::after{
  border:none;
}
.aa{
  width: 200rpx;
  height: 200rpx;
  background: rgba(0,155,0,0.5);
  position:fixed;
  top: 0;
}



